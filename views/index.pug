extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div
 
      h1 My Portfolio

      p.lead.text-light
        | These projects showcase my Full Stack Javascript experience.
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each project in data.projects
        .cell
          a(href=`/project/${project.id}`)
            img.thumbnail(src=`${project.image_url[1]}`)
            h5 #{project.project_name}
      
